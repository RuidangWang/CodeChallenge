<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name ="com.newjob.hibpack.Client" table = "Client">
      
      <meta attribute = "class-description">
         This class contains the client detail. 
      </meta>
      
      <id name = "client_id" type = "int" column = "client_id">
         <generator class="native"/>
      </id>
      
      <property name = "first_name" column = "first_name" type = "string"/>
      <property name = "last_name" column = "last_name" type = "string"/>
      <property name = "full_name" column = "full_name" type = "string"/>
   <!--   <property name = "birthday" column = "birthday" type = "DATE"/> -->
      <property name = "diagnoze" column = "diagnoze" type = "string"/>
   </class>
</hibernate-mapping>